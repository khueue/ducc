#!/usr/bin/env escript
%%! -pa ebin -Wall

usage() ->
    io:format('Usage: lexer~n'),
    io:format('(Uses stdin/stdout.)~n').

main([]) ->
    Stream = '<stdin>',
    String = tool_chain:string_from_input(),
    Result = (catch process(Stream, String)),
    case Result of
        {ok, Tokens} ->
            tool_chain:term_to_output(Tokens);
        {lexer_exception, Message} ->
            tool_chain:die(Message);
        UnknownError ->
            tool_chain:die(UnknownError)
    end;
main(_) ->
    usage().

process(Stream, String) ->
    _Tokens = lexer_driver:tokenize(Stream, String).
