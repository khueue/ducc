#!/usr/bin/env escript
%%! -pa ebin -Wall

usage() ->
    io:format('Usage: parser~n'),
    io:format('(Uses stdin/stdout.)~n').

main([]) ->
    Stream = '<stdin>',
    String = tool_chain:string_from_input(),
    Result = (catch process(Stream, String)),
    case Result of
        {ok, ParseTree} ->
            tool_chain:term_to_output(ParseTree);
        {parser_exception, Message} ->
            tool_chain:die(Message);
        {tool_chain_exception, invalid_term} ->
            tool_chain:die(String);
        UnknownError ->
            tool_chain:die('~p~n', [UnknownError])
    end;
main(_) ->
    usage().

process(Stream, String) ->
    Tokens = tool_chain:term_from_string(String),
    parser_driver:parse(Stream, Tokens).
