#!/usr/bin/env escript
%%! -pa ebin

usage() ->
    io:format('Usage: ducc [file]~n'),
    io:format('(Uses stdin/stdout if no file given.)~n').

main([]) ->
    String = io_tools:string_from_input(),
    compile(String);
main([File]) ->
    String = io_tools:string_from_file(File),
    compile(String);
main(_) ->
    usage().

compile(String) ->
    Tokens = lexer_driver:tokenize(String),
    ParseTree = parser_driver:parse(Tokens),
    io_tools:term_to_output(ParseTree).
